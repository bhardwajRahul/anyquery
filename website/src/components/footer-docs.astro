---
import Logo from "./logo.astro";

const { footnote } = Astro.props;
---

<footer
    class="flex flex-col sm:flex-row items-center sm:justify-between p-7 bg-transparent rounded-[14px] shadow-glow gap-8 sm:gap-4"
>
    <div
        class="text-[color:var(--sl-color-text)] flex flex-col items-center text-center sm:items-start sm:text-left"
    >
        <Logo />
        <p class="mt-1 text-xs">
            Copyright © 2025 · <a class="text-xs" href="https://julienc.me"
                >Julien Cagniart</a
            > · <br />
            All rights reserved
        </p>
        <div
            class="flex-row flex mt-6 gap-4 text-[color:var(--sl-color-gray-3)]"
        >
            <a href="https://github.com/julien040/anyquery/">
                <svg
                    class="w-5 h-5"
                    viewBox="0 0 24 24"
                    xmlns="http://www.w3.org/2000/svg"
                    ><path
                        fill="currentColor"
                        d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33s1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2"
                    ></path></svg
                >
            </a>
            <a href="https://x.com/JulienC_me">
                <svg
                    class="w-5 h-5"
                    viewBox="0 0 256 256"
                    xmlns="http://www.w3.org/2000/svg"
                    ><path
                        fill="currentColor"
                        d="m218.12 209.56l-61-95.8l59.72-65.69a12 12 0 0 0-17.76-16.14l-55.27 60.84l-37.69-59.21A12 12 0 0 0 96 28H48a12 12 0 0 0-10.12 18.44l61 95.8l-59.76 65.69a12 12 0 1 0 17.76 16.14l55.31-60.84l37.69 59.21A12 12 0 0 0 160 228h48a12 12 0 0 0 10.12-18.44M166.59 204L69.86 52h19.55l96.73 152Z"
                    ></path>
                </svg>
            </a>
        </div>
    </div>
</footer>

{
    footnote && (
        <div class="text-white/30 text-center mt-4 text-[0.7rem]">
            <p>{footnote}</p>
        </div>
    )
}

<!-- To facilite reading, a trailing div is added to the end of the file -->
<div class="py-4"></div>
